{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    }
  ],
  "routes": [
    {
      "src": "/api",
      "dest": "/api/index.py"
    },
    {
      "src": "/api/healthcheck",
      "dest": "/api/healthcheck/index.py"
    },
    {
      "src": "/api/test",
      "dest": "/api/test/index.py"
    },
    {
      "src": "/api/sessions",
      "dest": "/api/sessions/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/build/$1"
    }
  ]
} 